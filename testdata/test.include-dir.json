{
  "logging": {
    "logs": {
      "default": {
        "level": "INFO"
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [
            ":8080"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "example.com"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "Hello from directory include"
                }
              ]
            }
          ],
          "logs": {
            "default_logger_name": "default"
          }
        }
      }
    }
  }
}
